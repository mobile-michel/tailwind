    <a class="grow hover:bg-zinc-700 hover:text-white" href="/products">products</a>
    <a class="grow hover:bg-zinc-700 hover:text-white" href="/about">about</a>
    <a class="grow hover:bg-zinc-700 hover:text-white" href="/contact">contact</a>
    </nav>

    <main class="flex-grow flex flex-col md:flex-row">
    <section class="flex-grow bg-zinc-200 p-6">
    	<slot />
    </section>

    <aside class="md:w-1/4 bg-zinc-300 p-6">
        <p>secondary navigation</p>
    	<nav class="flex flex-col">
            <a href="#">link 1</a>
            <a href="#">link 2</a>
            <a href="#">link 3</a>
            <a href="#">link 4</a>
        </nav>
    </aside>

    </main>
    
    <footer class="bg-zinc-600 text-white p-2 text-center">
